{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es5",
    "lib": [ "es6", "dom" ],
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "noEmitHelpers": false,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false
}
